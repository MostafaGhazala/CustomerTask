
@using Microsoft.AspNetCore.Identity
@using CustomerTask.Core.Entites
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Error";
    bool isLoggedIn = SignInManager.IsSignedIn(User);
}

<div class="container text-center mt-5">
    <h1 class="display-4 text-danger">⚠️ An unexpected error occurred</h1>
    <p class="lead">Please try again later or contact support.</p>

    @if (isLoggedIn)
    {
        <a asp-controller="Home" asp-action="Index" class="btn btn-primary mt-3">🏠 Back to Home</a>
    }
    else
    {
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary mt-3">🔐 Go to Login</a>
    }
</div>
